<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prova.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Digite o símbolo."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Digite o símbolo." />
            <Entry
                x:Name="campoSimbolo"
                MaxLength="10"
                Text=""/>
            <Button
                x:Name="BuscarInformacoes"
                Text="Ok" 
                SemanticProperties.Hint="Busca Informação"
                Clicked="CliqueBuscarInformacoes"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
